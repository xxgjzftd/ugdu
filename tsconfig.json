{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,

    "declaration": true,
    "declarationMap": true,

    "sourceMap": true,

    "esModuleInterop": true,

    "target": "esnext"
  }
}
