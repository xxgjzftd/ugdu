  "engines": {
    "node": ">=14.17.0"
  },
  "author": "xxgjzftd <xxgjzftd@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@ugdu/processor": "workspace:*",
    "@ugdu/runtime": "workspace:*",
    "rollup": "^4.17.2",
    "type-fest": "^4.18.2"
  },
  "dependencies": {
    "@pnpm/find-workspace-packages": "^6.0.9",
